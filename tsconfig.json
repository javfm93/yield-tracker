{
  "compilerOptions": {
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDir": ".",
    "strict": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/**.ts",
    "node_modules/hash.js/lib/hash.d.ts"
  ],
  "exclude": ["node_modules"]
}
